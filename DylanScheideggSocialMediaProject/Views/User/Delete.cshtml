<!--User Model-->
@model User
@{
    ViewBag.Title = "Delete User";
}

<h2>Confirm Delete</h2>
<!--Display basic info to confirm to the user-->
<h3>@Model.LName, @Model.FName (@Model.DOB)</h3>

<!--Buttons to allow the user to either cancel or continue with the deletion-->
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="UserID" />

    <button type="submit" class="btn btn-primary">Delete </button>
    <a asp-controller="User" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
